<?xml version="1.0" encoding="us-ascii"?>
<SerializableGameEvent xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Containers>
    <Container>
      <Trigger>Interaction</Trigger>
      <Condition>FirstDialogue</Condition>
      <Actions>
        <ActionBase xsi:type="PlayAnimation">
          <Trigger>Action</Trigger>
          <ObjectToAnimate>Jager cut</ObjectToAnimate>
        </ActionBase>
        <ActionBase xsi:type="ChangeSwitch">
          <Name>SecondDialogue</Name>
          <Value>true</Value>
        </ActionBase>
        <ActionBase xsi:type="ChangeSwitch">
          <Name>FirstDialogue</Name>
          <Value>false</Value>
        </ActionBase>
      </Actions>
    </Container>
    <Container>
      <Trigger>Interaction</Trigger>
      <Condition>SecondDialogue</Condition>
      <Actions>
        <ActionBase xsi:type="ShowDialogue">
          <Dialogues>
            <Dialogue>
              <Name />
              <ImagePath />
              <Text>Adesso smamma</Text>
            </Dialogue>
          </Dialogues>
        </ActionBase>
      </Actions>
    </Container>
  </Containers>
</SerializableGameEvent>